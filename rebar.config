{erl_opts, [
  debug_info,
  {recursive, false}
]}.

{deps, [{katana_code, "0.1.2"}]}.

{escript_incl_apps,
 [erlang_analyzer]}.
{escript_main_app, erlang_analyzer}.
{escript_name, erlang_analyzer}.
{escript_emu_args, "%%! +sbtu +A1\n"}.

%% Profiles
{profiles, [{test,
             [{erl_opts, [debug_info, {recursive, false}]}
            ]}]}.

{dialyzer, [
  {warnings, [
    no_return,
    no_unused,
    no_improper_lists,
    no_fun_app,
    no_match,
    no_opaque,
    no_fail_call,
    no_contracts,
    no_behaviours,
    no_undefined_callbacks,
    unmatched_returns,
    error_handling,
    race_conditions]},
  {get_warnings, true},
  {plt_apps, all_deps} % default: top_level_deps
  % {plt_extra_apps, [atom()]},
  % {plt_location, local | file:filename()},
  % {plt_prefix, string()},
  % {base_plt_apps, [atom(), ...]},
  % {base_plt_location, global | file:filename()},
  % {base_plt_prefix, string()}]}.
]}.